server {
  listen 80;
  server_name {{domain}};

  root {{ app_location }}/current;

  client_max_body_size 64M;

  location ~ \.php$ {
    include fastcgi.conf;
    fastcgi_index index.php;
    fastcgi_pass unix:/var/run/php-fpm/lychee.sock;
    fastcgi_param PHP_VALUE "max_execution_time=1800
                            post_max_size=1500M
                            upload_max_filesize=32M
                            max_input_time=1800
                            max_file_uploads=300";
  }

  access_log {{ app_location }}/shared/log/nginx-access.log;
  error_log  {{ app_location }}/shared/log/nginx-error.log;
}
