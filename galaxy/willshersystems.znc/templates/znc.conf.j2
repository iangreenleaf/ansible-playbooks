Version = 1.4
<Listener l>
  Port = {{ znc_port }}
  IPv4 = {{ 'true' if znc_ipv4 else 'false' }}
  IPv6 = {{ 'true' if znc_ipv6 else 'false' }}
  SSL = {{ 'true' if znc_ssl else 'false' }}
</Listener>
LoadModule = partyline
LoadModule = webadmin

<User {{ znc_user_name }}>
  Pass       = {{ znc_user_password }}
  Admin      = true
  Nick       = {{ znc_user_nick }}
  AltNick    = {{ znc_user_nick }}_
  Ident      = {{ znc_user_ident }}
  RealName   = {{ znc_user_realname }}
  Buffer     = {{ znc_user_buffer }}
  AutoClearChanBuffer = {{ 'true' if znc_user_autoclearchanbuffer else 'false' }}
  ChanModes  = +stn
  
  LoadModule = chansaver
  LoadModule = controlpanel
  LoadModule = perform
  LoadModule = webadmin
</User>
